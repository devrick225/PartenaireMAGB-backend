# Configuration serveur
NODE_ENV=development
PORT=5000
HOST=localhost

# Base de donn√©es MongoDB
MONGODB_URI=mongodb://localhost:27017/partenaire-magb
MONGODB_URI_TEST=mongodb://localhost:27017/partenaire-magb-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRE=30d

# Configuration Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@partenairemagb.com

# Configuration Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_ENVIRONMENT=sandbox

# Configuration CinetPay
CINETPAY_API_KEY=your-cinetpay-api-key
CINETPAY_SITE_ID=your-cinetpay-site-id
CINETPAY_SECRET_KEY=your-cinetpay-secret-key
CINETPAY_ENVIRONMENT=sandbox
CINETPAY_WEBHOOK_URL=https://your-domain.com/api/webhooks/cinetpay

# Configuration Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Configuration PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# Configuration FusionPay
FUSIONPAY_API_URL=https://api.fusionpay.io/v1
FUSIONPAY_PUBLIC_KEY=fp_pub_test_your-fusionpay-public-key
FUSIONPAY_SECRET_KEY=fp_sec_test_your-fusionpay-secret-key
FUSIONPAY_WEBHOOK_SECRET=fp_wh_your-fusionpay-webhook-secret
FUSIONPAY_ENVIRONMENT=sandbox

# Configuration Orange Money (West Africa)
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_SECRET=your-orange-money-secret
ORANGE_MONEY_ENVIRONMENT=sandbox

# Configuration MTN Mobile Money
MTN_API_KEY=your-mtn-api-key
MTN_USER_ID=your-mtn-user-id
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_ENVIRONMENT=sandbox

# Configuration Cloudinary (Upload d'images)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Configuration Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URLs Frontend
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Configuration Redis (optionnel pour cache/sessions)
REDIS_URL=redis://localhost:6379

# Configuration logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration MoneyFusion (moneyfusion.net)
MONEYFUSION_API_URL=https://www.pay.moneyfusion.net/api/v1/payment
MONEYFUSION_ENVIRONMENT=sandbox 